<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDEFFF"
        android:gravity="center"
        android:padding="5dp"
        android:text="手机防盗"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_info_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1234"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_info_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/unlock"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="重新进入设置向导"
        android:onClick="resetConfigure"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:clickable="true"
        android:background="@drawable/item_bg_selector"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="功能简介"
        android:textSize="30sp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:background="#aaaaaa"/>

    <TextView
        style="@style/setup1_text_style"
        android:text="GPS追踪: #location#"/>
    <TextView
        style="@style/setup1_text_style"
        android:text="播放警报音乐: #alarm#"/>
    <TextView
        style="@style/setup1_text_style"
        android:text="远程销毁数据: #wipedata#"/>
    <TextView
        style="@style/setup1_text_style"
        android:text="远程锁屏: #lockscreen#"/>
</LinearLayout>
