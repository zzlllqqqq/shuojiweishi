<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/item_background_selector">

    <ImageView
        android:id="@+id/iv_item_cache_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_item_cache_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/iv_item_cache_icon"
        android:gravity="center_vertical"
        android:text="软件名称"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_item_cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_cache_name"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_item_cache_icon"
        android:text="缓存大小" />

    <ImageView
        android:id="@+id/iv_item_cache_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/clean_button_selector" />

</RelativeLayout>